Hey welcome you here!!
<h1>URL Shortner</h1>

<% if (locals.id) 
{
    %> <p> URL Generated: http://localhost:8010/redirects/<%= id %> </p>  <%
}
%>

<div>
    <form method="POST" action="/url">
        <label>ENter your orginal URL</label>
        <input 
         type="text" 
         placeholder="https://example.com"        
         name="url"
         />
        <button type="submit">Generate</button>
    </form>
</div>



    <% if (locals.urls) { %>
        <div>
     <table>
        <thead>
            <th>Sr No</th>
            <th>Short ID</th>
            <th>Redirect URL</th>
            <th>No of visits</th>
        </thead>
        <tbody>
            <% urls.forEach((url,index) => { %>
                <tr>
             <td><%=index+1 %></td>
             <td><%=url.shortId %></td>
             <td><%=url.redirectURL %></td>
             <td><%=url.visitHistory.length %></td>
            </tr>
            <% }) %>
        </tbody>
     </table>
    
</div>
<% } %>
</body>
</html>
